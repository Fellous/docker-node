<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile de <%= profile.name %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="profile-container">
    <h1>Profile de <%= profile.name %></h1>
    <img src="<%= profile.image %>" alt="Profile picture of <%= profile.name %>">
    <p><%= profile.description %></p>
    <h2>Hobbies</h2>
    <ul>
      <% profile.hobbies.split(',').forEach(hobby => { %>
        <li><%= hobby.trim() %></li>
      <% }); %>
    </ul>
    <div class="navigation-buttons">
      <% if (index > 0) { %>
        <a href="/profile/<%= index - 1 %>" class="btn">Précédent</a>
      <% } %>
      <% if (index < profiles.length - 1) { %>
        <a href="/profile/<%= index + 1 %>" class="btn">Suivant</a>
      <% } %>
    </div>
  </div>
</body>
</html>
